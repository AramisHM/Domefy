{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Windows (MinGW)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/fpmed.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "C:/MinGW/bin/gdb32.exe",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "Debug Windows (MSVC)",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/fpmed.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false
    },
    {
      "name": "Go Webserver (WIN32)",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/webserver/main.go"
    },
    {
      "name": "Debug Linux",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/fpmed",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Automatische Strukturierung und Einrückung für "gdb" aktivieren",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    },
    {
      "psi-header.variables": [
        [
          "projectCreationYear",
          "2017"
        ],
        [
          "projectname",
          "fpmed"
        ],
        [
          "author",
          "Aramis Hornung"
        ],
        [
          "authoremail",
          "aramishm@gmail.com"
        ]
      ],
      "psi-header.templates": [
        {
          "language": "*",
          "template": [
            "File: <<filename>>",
            "Project: <<projectname>>",
            "File Created: <<filecreated('dddd, Do MMMM YYYY h:mm:ss a')>>",
            "Author: <<author>> (<<authoremail>>)",
            "-----",
            "Last Modified: <<dateformat('dddd, Do MMMM YYYY h:mm:ss a')>>",
            "Modified By: <<author>> (<<authoremail>>>)",
            "-----",
            "Copyright <<projectCreationYear>> - <<year>> <<copyrightholder>>, <<company>>"
          ]
        }
      ]
    }
  ]
}